# Server Configuration
PORT=8000
HOST=0.0.0.0
# Environment: development, staging, production
ENVIRONMENT=development
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:3000

# ===========================================
# Supabase Configuration
# ===========================================
# Get these from: Supabase Dashboard > Project Settings > API
# Recommended: Use EU (Frankfurt) region for GDPR compliance
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# Authentication (JWT)
# ===========================================
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=1
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth redirect URL (for Google login callback)
# Development: http://localhost:3000/auth/callback
# Production: https://yourdomain.com/auth/callback
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback

# Google OAuth Credentials (for web app login)
# Get these from Google Cloud Console
# The same client ID used in Chrome extension manifest
GOOGLE_CLIENT_ID=210145228416-184rhnsd7r0qava7ucpflroauag8bsq7.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===========================================
# Quota Limits (Free Tier)
# ===========================================
# REMOVED: No limits on summaries and chat for now
# FREE_TIER_SUMMARIES_PER_MONTH=10
# FREE_TIER_CHAT_MESSAGES_PER_VIDEO=5

# Saved items limit (to prevent storage abuse)
FREE_TIER_MAX_SAVED_ITEMS=25

# ===========================================
# Admin API Configuration
# ===========================================
# Secret key for admin endpoints (e.g., cleanup jobs)
# Generate a secure secret: openssl rand -hex 32
ADMIN_API_KEY=your_admin_api_key_here_change_in_production

# ===========================================
# Pinecone Configuration (for semantic search)
# ===========================================
# Get these from: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=mintclip-embeddings
