{
  "manifest_version": 3,
  "name": "Mintclip",
  "version": "0.1.0",
  "description": "AI-powered YouTube video transcripts, summaries, and chat - learn faster from YouTube content",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "210145228416-184rhnsd7r0qava7ucpflroauag8bsq7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:5173/*",
    "http://localhost:5174/*",
    "https://mintclip.app/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": ["src/content/index.tsx"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "http://localhost:5174/*",
        "https://mintclip.app/*"
      ],
      "js": ["src/content-scripts/webapp-bridge.ts"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icon-grey-16.png",
      "48": "icon-grey-48.png",
      "128": "icon-grey-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}

